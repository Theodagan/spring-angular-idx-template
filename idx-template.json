{
  "name": "Spring Boot + Angular Starter",
  "description": "Modèle Firebase Studio pour une application full-stack avec Angular en frontend et Spring Boot en backend. Permet de cloner un repo existant ou d'en générer un.",
  "params": [
    {
      "id": "github_url",
      "name": "URL GitHub du projet (optionnel)",
      "type": "text",
      "default": ""
    },
    {
      "id": "frontend_path",
      "name": "Chemin du dossier frontend",
      "type": "text",
      "required": true
    },
    {
      "id": "backend_path",
      "name": "Chemin du dossier backend",
      "type": "text",
      "required": true
    },
    {
      "id": "java_version",
      "name": "Version Java (JDK)",
      "type": "enum",
      "default": "21",
      "options": {
        "11": "Java 11",
        "17": "Java 17",
        "21": "Java 21"
      },
      "required": true
    },
    {
      "id": "angular_cli_version",
      "name": "Version Angular CLI",
      "type": "enum",
      "default": "latest",
      "options": {
        "14": "v14",
        "15": "v15",
        "16": "v16",
        "latest": "Latest"
      },
      "required": true
    },
    {
      "id": "mysql_user",
      "name": "Utilisateur MySQL",
      "type": "text",
      "default": "dev"
    },
    {
      "id": "mysql_password",
      "name": "Mot de passe MySQL",
      "type": "text",
      "default": "password"
    },
    {
      "id": "mysql_database",
      "name": "Nom de la base de données MySQL",
      "type": "text",
      "default": "dev_db"
    },
    {
      "id": "mysql_port",
      "name": "Port MySQL",
      "type": "text",
      "default": "3306"
    }
  ]
}
